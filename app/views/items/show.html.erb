<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => Item %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:Code) %></dt>
      <dd><pre class="prettyprint"><%= @item.Code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:Desc) %></dt>
      <dd><pre class="prettyprint"><%= @item.Desc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:Price) %></dt>
      <dd><pre class="prettyprint"><%= @item.Price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:Qty) %></dt>
      <dd><pre class="prettyprint"><%= @item.Qty %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:UnlockCode) %></dt>
      <dd><pre class="prettyprint"><%= @item.UnlockCode %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

