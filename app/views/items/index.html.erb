<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Desc</th>
      <th>Info</th>
      <th>Price</th>
      <th>Qty</th>
      <th>Unlockcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.Code %></td>
        <td><%= item.Desc %></td>
        <td><%= item.info %></td>
        <td><%= item.Price %></td>
        <td><%= item.Qty %></td>
        <td><%= item.UnlockCode %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
